<!-- Pushback -->
  <model>
	<name>Pushback</name>
	<path>Aircraft/T-7/Models/towing_car/towing_car.xml</path>
	<condition>
		<less-than-equals>
			<property>velocities/airspeed-kt</property>
			<value>80</value>
		</less-than-equals>
	</condition>
	<offsets>
		<x-m>-3.6</x-m>
		<y-m>-0.00</y-m>
		<z-m>-1.10</z-m>
	</offsets>
  </model> 

  <!-- Interior -->
  <model>
	<path>Aircraft/T-7/Models/Interior/interior.xml</path>
	<offsets>
		<x-m> 0 </x-m>
		<y-m> 0 </y-m>
		<z-m> 0 </z-m>
		<roll-deg> 0 </roll-deg>
		<pitch-deg> 0 </pitch-deg>
		<heading-deg> 0 </heading-deg>
	</offsets>
  </model>

  <!-- Immatriculatoin  -->
  <model>
	<path>Aircraft/T-7/Models/Immat/immat.xml</path>
	<offsets>
		<x-m> 0 </x-m>
		<y-m> 0 </y-m>

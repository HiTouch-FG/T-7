<?xml version="1.0" encoding="UTF-8"?>

<!-- Base: The sounds of the FK9 Mark 2 by Maik JUSTUS -->
 
<PropertyList>

  <fx>

<!-- ****************************************************** -->

		<door>
			<name>door</name>
			<mode>looped</mode>
			<path>Aircraft/T-7/Sounds/rumble.wav</path>
			<condition>
                            <and>
                               <greater-than>
				<property>instrumentation/doors/crew/position-norm</property>
                                <value>0.02</value>
                               </greater-than>
                                <less-than>
				<property>instrumentation/doors/crew/position-norm</property>
                                <value>0.98</value>
                               </less-than>
                            </and>
			</condition>
			<volume>
                          <factor>0.4</factor>
                        </volume>
		</door>

 
    <crank>
      <name>engstart</name>
      <path>Aircraft/T-7/Sounds/eng_start_ext1_part1.wav</path>
      <condition>
        <and>
          <property>/engines/engine/n1</property>
          <property>/sim/current-view/internal</property>
        </and>
      </condition>
      <volume>
        <property>/engines/engine/n1</property>
        <factor>1.0</factor>
        <offset>1.0</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </crank>

    <crank>
      <name>engstartext</name>
      <path>Aircraft/T-7/Sounds/eng_start_int1_part1.wav</path>
      <condition>
        <and>
          <property>/engines/engine/n1</property>
          <not>
            <property>/sim/current-view/internal</property>
          </not>
        </and>
      </condition>
      <volume>
        <property>/engines/engine/n1</property>
        <factor>1.0</factor>
        <offset>1.0</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </crank>

    <crank>
      <name>crank</name>
      <mode>looped</mode>
      <path>Aircraft/T-7/Sounds/eng_start_int1_part2.wav</path>
      <condition>
        <and>
          <property>/engines/engine/n1</property>
          <property>/sim/current-view/internal</property>
          <not>
            <property>/engines/engine/running</property>
          </not>
        </and>
      </condition>
      <volume>
        <offset>0.5</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </crank>

    <crank>
      <name>crankext</name>
      <mode>looped</mode>
      <path>Aircraft/T-7/Sounds/eng_start_ext1_part2.wav</path>
      <condition>
        <and>
          <property>/engines/engine/n1</property>
          <not>
            <property>/sim/current-view/internal</property>
          </not>
          <not>
            <property>/engines/engine/running</property>
          </not>
        </and>
      </condition>
      <volume>
        <offset>0.5</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </crank>

    <crank>
      <name>cough</name>
      <path>Aircraft/T-7/Sounds/jfs-connect.wav</path>
      <property>/engines/engine/running</property>
      <volume>
        <offset>0.3</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </crank>

    <stopext>
      <name>stopext</name>
      <path>Aircraft/T-7/Sounds/eng_stop_ext1.wav</path>
      <condition>
        <not>
          <property>/engines/engine/running</property>
        </not>
      </condition>
      <volume>
        <property>/sim/current-view/internal</property>
        <factor>-1.0</factor>
        <offset>1.0</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </stopext>

    <stop>
      <name>stop</name>
      <path>Aircraft/T-7/Sounds/eng_stop_int1.wav</path>
      <condition>
        <not>
          <property>/engines/engine/running</property>
        </not>
      </condition>
      <volume>
        <property>/sim/current-view/internal</property>
        <factor>1.0</factor>
        <offset>0.0</offset>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </stop>

    <engine>
      <name>engine</name>
      <mode>looped</mode>
      <path>Aircraft/T-7/Sounds/eng_run_ext1_loop.wav</path>
      <condition>
        <and>
          <property>/engines/engine/running</property>
          <not>
            <property>/sim/current-view/internal</property>
          </not>
        </and>
      </condition>
      <volume>
        <property>engines/engine/mp-osi</property>
        <factor>0.00375</factor>
        <min>0.5</min>
        <max>2.0</max>
      </volume>
      <pitch>
        <property>/engines/engine/rpm</property>
        <factor>0.0005</factor>
        <min>0.15</min>
        <max>2.0</max>
        <offset>-0.0</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>5000</max-dist>
    </engine>

    <engine>
      <name>engineextslow</name>
      <mode>looped</mode>
      <path>Aircraft/T-7/Sounds/eng_run_ext3_slow.wav</path>
      <condition>
        <and>
          <property>/engines/engine/running</property>
          <not>
            <property>/sim/current-view/internal</property>
          </not>
        </and>
      </condition>
      <volume>
        <property>engines/engine/mp-osi</property>
        <factor>0.00375</factor>
        <min>0.5</min>
        <max>2.0</max>
      </volume>
      <pitch>
        <property>/engines/engine/rpm</property>
        <factor>0.0005</factor>
        <min>0.35</min>
        <max>2.0</max>
        <offset>-0.0</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>

    <propellerhigh>
      <name>propellerhigh</name>
      <mode>looped</mode>
      <path>Aircraft/T-7/Sounds/eng_run_int_4430.wav</path>
      <condition>
        <and>
          <property>/engines/engine/running</property>
          <property>/sim/current-view/internal</property>
        </and>
      </condition>
      <volume>
        <property>engines/engine/mp-osi</property>
        <factor>0.00375</factor>
        <min>0.5</min>
        <max>2.0</max>
      </volume>
      <!--
      <volume>
        <property>/orientation/alpha-deg</property>
        <type>log</type>
        <min>0.2</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/sim/current-view/internal</property>
        <factor>0.5</factor>
      </volume>-->
      <pitch>
        <property>/engines/engine/rpm</property>
        <factor>0.000226</factor>
        <min>0.15</min>
        <max>4.0</max>
        <offset>-0.0</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </propellerhigh>

    <propellerlow>
      <name>propellerlow</name>
      <mode>looped</mode>
      <path>Aircraft/T-7/Sounds/eng_run_int_1340.wav</path>
      <condition>
        <and>
          <property>/engines/engine/running</property>
          <property>/sim/current-view/internal</property>
        </and>
      </condition>
      <volume>
        <property>engines/engine/mp-osi</property>
        <factor>0.00375</factor>
        <min>0.5</min>
        <max>2.0</max>
      </volume>
      <!--
      <volume>
        <property>/orientation/alpha-deg</property>
        <type>log</type>
        <min>0.2</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/sim/current-view/internal</property>
        <factor>0.5</factor>
      </volume>
      -->
      <pitch>
        <property>/engines/engine/rpm</property>
        <factor>0.0007462</factor>
        <min>0.5</min>
        <max>4.0</max>-
        <offset>-0.0</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </propellerlow>

    <rumble>
      <name>rumble</name>
      <mode>looped</mode>
      <path>Aircraft/T-7/Sounds/rumble.wav</path>
      <condition>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
        <!-- <property>/sim/current-view/internal</property> -->
      </condition>
      <volume>
        <property>/velocities/groundspeed-kt</property>
        <!--type>log</type-->
        <factor>0.025</factor>
        <offset> -0.01</offset>
        <max>1.01</max>
        <min>0.01</min>
      </volume>
      <pitch>
        <property>/velocities/groundspeed-kt</property>
        <factor>0.01</factor>
        <offset>0.85</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </rumble>

    <squeal>
      <name>squeal</name>
      <path>Aircraft/T-7/Sounds/wow.wav</path>
      <condition>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.5</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.1</factor>
        <max>1.0</max>
      </volume>
      <volume>
        <internal>dt_stop</internal>
        <factor>0.05</factor>
        <max>1.0</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>1.0</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </squeal>
     <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Sounds/gear.wav</path>
      <property>/gear/gear[0]/position-norm</property>
      <pitch>
        <internal>dt_play</internal>
        <offset>1.0</offset>
        <factor>-0.001</factor>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>

    <gear>
      <name>gear-lock</name>
      <path>Sounds/gear-lck.wav</path>
      <condition>
        <equals>
          <property>/gear/gear[0]/position-norm</property>
          <value>0</value>
        </equals>
      </condition>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>
    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Sounds/flaps.wav</path>
      <property>/surface-positions/flap-pos-norm</property>
      <volume>
        <factor>0.8</factor>
      </volume>
      <reference-dist>10.0</reference-dist>
      <max-dist>20.0</max-dist>
    </flap>

    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Sounds/wind.wav</path>
      <property>/velocities/airspeed-kt</property>
      <volume>
        <property>/position/altitude-ft</property>
        <factor>-0.000015</factor>
        <offset>1.0</offset>
        <min>0.0</min>
        <max>1.0</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0015</factor>
        <min>0.0</min>
        <max>0.25</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0035</factor>
        <offset>1.25</offset>
      </pitch>
    </wind>

    <!--                  Toggle Switches                  -->     
    <click> 
      <name>Battery on</name>
      <path>Sounds/click.wav</path>
      <condition> 
        <property>controls/electric/battery-switch</property>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>

    <click> 
      <name>Battery off</name>
      <path>Sounds/click.wav</path>
      <condition> 
        <not> 
          <property>controls/electric/battery-switch</property>
        </not>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>

    <click> 
      <name>Fuel Pump on</name>
      <path>Sounds/click.wav</path>
      <condition> 
        <property>controls/engines/engine/fuel-pump</property>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>

    <click> 
      <name>Fuel Pump off</name>
      <path>Sounds/click.wav</path>
      <condition> 
        <not> 
          <property>controls/engines/engine/fuel-pump</property>
        </not>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>
 
    <click>
      <name>Landing Light On</name>
      <path>Sounds/click.wav</path>
      <condition>
        <property>controls/switches/landing-light</property>
      </condition>
      <volume>
        <factor>1.0</factor>
      </volume>
    </click>
      
    <click>
      <name>Landing Light Off</name>
      <path>Sounds/click.wav</path>
      <condition>
        <not>
          <property>controls/switches/landing-light</property>
        </not>
      </condition>
      <volume>
        <factor>1.0</factor>
      </volume>
    </click>

    <click> 
      <name>Magnetos-off</name>
      <path>Sounds/click.wav</path>
      <condition>
        <not>
          <property>controls/engines/engine/magnetos</property>
        </not>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>

    <click> 
      <name>Strobe Lights White</name>
      <path>Sounds/click.wav</path>
      <condition>
        <equals>
          <property>controls/switches/strobes</property>
          <value>1</value>
        </equals>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>

    <click> 
      <name>Strobe Lights Off</name>
      <path>Sounds/click.wav</path>
      <condition>
        <not> 
          <property>controls/switches/strobes</property>
        </not>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>

    <click> 
      <name>Avionics Master On</name>
      <path>Sounds/click.wav</path>
      <condition>
        <property>controls/switches/avionic-master</property>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>
 
    <click> 
      <name>Avionics Master Off</name>
      <path>Sounds/click.wav</path>
      <condition>
        <not>
          <property>controls/switches/avionic-master</property>
        </not>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>

    <!--                  Toggle Switches                  -->     
    <click> 
      <name>click on</name>
      <path>Sounds/click.wav</path>
      <condition> 
        <property>sim/sound/click</property>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>

    <click> 
      <name>click off</name>
      <path>Sounds/click.wav</path>
      <condition>
        <not>
          <property>sim/sound/click</property>
        </not>
      </condition>
      <volume> 
        <factor>1.0</factor>
      </volume>
    </click>

  <stall>
	<name>pre-stall</name>
	<mode>looped</mode>
	<type>avionics</type>
	<path>Sounds/stall-600-chopped.wav</path>
	<condition>
		<and>
			<greater-than>
				<property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
				<value> 57 </value>
			</greater-than>
			<less-than>
				<property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
				<value> 62 </value>
			</less-than>
			<not>
				<property>gear/gear[0]/wow</property>
			</not>
			<not>
				<property>gear/gear[1]/wow</property>
			</not>
		</and>
	</condition>
	<volume>
		<factor>1.0</factor>
	</volume>
	<reference-dist>10.0</reference-dist>
	<max-dist>20.0</max-dist>
  </stall>

  <stall>
	<name>stall</name>
	<mode>looped</mode>
	<type>avionics</type>
	<path>Sounds/stall-600-continue.wav</path>
	<condition>
		<and>
			<less-than>
				<property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
				<value> 57 </value>
			</less-than>
			<not>
				<property>gear/gear[0]/wow</property>
			</not>
			<not>
				<property>gear/gear[1]/wow</property>
			</not>
		</and>
	</condition>
	<volume>
		<factor>1.0</factor>
	</volume>
	<reference-dist>10.0</reference-dist>
	<max-dist>20.0</max-dist>
  </stall>

  <squeal>
	<name>TIRESMOKE</name>
	<type>effect</type>
	<path>Sounds/squeal.wav</path>
	<condition>
		<or>
			<greater-than>
          			<property>/gear/gear[0]/compression-m</property>
	  			<value>0.09</value>
			</greater-than>
			<greater-than>
          			<property>/gear/gear[1]/compression-m</property>
	  			<value>0.09</value>
			</greater-than>
		</or>
	</condition>
	<volume>
		<factor>1.0</factor>
	</volume>
  </squeal>

  </fx>

</PropertyList>




